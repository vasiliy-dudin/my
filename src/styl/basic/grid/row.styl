// Based on https://github.com/vivid-web/flexbox-grid-stylus


$row-styles
	@extend .d-flex
	flex: 0 1 100%
	flex-direction: row
	flex-wrap: wrap
	list-style: none
	padding: 0

.row
	@extend $row-styles
	&:last-child
		margin-bottom: 0
.row
	margin-left: - ($grid-gutter-width-base/2)
	margin-right: - ($grid-gutter-width-base/2)
	
	
	
// Без отступов
.row--no-gutters
	@extend $row-styles
	margin: 0
	[class*="col--"]
		padding 0

	
// Отступы 10px между колонками
.row2
	@extend $row-styles
	margin-left -5px
	margin-right -5px
	div[class*='col--']
		padding-left 5px
		padding-right 5px