.nav // nav
	height: 100%

.menu // ul
	$bg--active = darken($header__bg, 10%)
	
	height: 100%
	margin 0
	padding 0
	list-style: none
	
	
	&__lnk
		height: 100%
		transition background 0.15s
		color $header__color !important
		font-size 0.9rem
		line-height: 1.2
		&.--active
			background-color $bg--active !important
		&:hover
			background-color lighten($bg--active, 4)
		&__inr
			display: inline-block
			border-bottom: 2px solid alpha($header__color, $thin-underline-opacity)
		
		// Адаптивное
		padding 10px 20px
		flex 1 0 100%
		text-align right
		+media(md)
			display: flex
			align-items center
			padding 0 2vw
			flex 0 0 auto
