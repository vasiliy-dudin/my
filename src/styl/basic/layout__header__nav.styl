// Гамбургер (.expand-lnk)
.hamburger
	position absolute
	height: 35px
	width: 35px
	z-index 999
	background: svg-load('../imgs/icons/hamurger.svg') no-repeat 50% 50%
	background-size: 20px
	top: 18px
	right: 15px
	border-radius: 3px
	&.in
		background-color darken($mob-navbar-bg, 20%)
	
	+media(md)
		display: none

