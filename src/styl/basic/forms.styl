// Поле + label
.form-item
	margin-bottom 20px
	

// Placeholder text
placeholder($color)
	&:-moz-placeholder
		color: $color;  // Firefox 4-18
	&::-moz-placeholder
		color: $color;  // Firefox 19+
	&:-ms-input-placeholder
		color: $color;  // Internet Explorer 10+
	&::-webkit-input-placeholder
		color: $color;  // Safari and Chrome
placeholder(#b9b9b9)

label
	display table-cell
	font-size 0.85rem
	font-weight: 700;

select
