/* =================================
Ссылки статей
================================= */

.group // ul
	list-style none
	padding: 0

	&__item // li
		line-height: 1.3
		padding 5px 0
		display: flex
		align-items: center
		// Буллет
		&:before
			content ''
			display: block
			position: relative
			height: 5px
			width: @height
			background $link-color
			border-radius: 50%
	
	&__lnk // a
		margin-left: 6px
		
		// Элемент выбран
		&.--active
			background tint($link-color, 75%) !important
			//box-shadow inset 0 0 2px 1px $brand-2
			color $link-color !important
		/*&.--active:before // Буллет
			background #fff*/
		

