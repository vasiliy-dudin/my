// Общие свойства для всех кнопок
// --------------------------------------------------
$btn-common
	display inline-block
	button-size($padding:8px 20px, $font-size:1rem, $border-radius:5px)
	margin-bottom 0 // For input.btn
	font-weight normal
	line-height 1
	text-align center
	vertical-align: middle
	cursor pointer
	background-image none // Reset unusual Firefox-on-Android default style; see https://github.com/necolas/normalize.css/issues/214
	white-space nowrap
	user-select none
	text-decoration none
	outline 0
	border-style solid // отменяет стандартный стиль для <button>
	&.disabled
	&[disabled]
	fieldset[disabled] &
		cursor not-allowed
		pointer-events none // Future-proof disabling of clicks
		opacity 0.65
		box-shadow none
	





.btn
input[type="button"]
input[type="submit"]
input[type="reset"]
	@extend $btn-common
	$bg = #fff
	$border-color = #000
	//$bg-hue = hue($bg)
	//button-variant__color-bg($color: $body-color, $bg-color: $brand-2) // color + bg
	//button-variant__color-bg--hover($color: $color-l, $bg-color: alpha($color-l, 0.1)) // hover
	//button-variant__color-bg--active($color: $color-l, $bg-color: $color-l) // active
	position relative
	color $border-color
	background-color $bg
	border 1px solid
	box-shadow: 0 3px 0 lighten($border-color, 35%)

	&:hover
		background-color darken($bg, 15%)
		//border-color lighten($border-color, 40%)
	&:focus
		top 1px
		background-color transparent
		box-shadow: 0 4px 0 transparent, inset 0 4px 5px 0 lighten($border-color, 40%)





