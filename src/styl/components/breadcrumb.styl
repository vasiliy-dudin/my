$breadcrumb-link-color = $color_blue-gray--6
$breadcrumb-active-color = $color_blue-gray--6

.breadcrumbs // ol
	display: flex
	margin: 0 0 0.5rem
	padding: 0
	font-size 0.9rem
	line-height: 1.3
	list-style: none
	&__item // li
		display: flex
		align-items center
		white-space: nowrap

		// Разделители
		&:not(:last-child):after
			content: ""
			margin: 0 12px
			background: url(/imgs/breadcrumbs-arrow.svg) 50% 50% no-repeat
			width: 7px
			height: 12px
			display: block
			//background-size: contain

	&__link
		display: inline-block
		color $breadcrumb-link-color !important
		border-width: 1px !important
		thin-underline--default($border-color=$breadcrumb-link-color)
		&.--current
			border: 0
			color: $breadcrumb-active-color !important
			background none !important
			cursor default
			+media-down(md)
				text-overflow: ellipsis
				width: 100px
				overflow: hidden
		