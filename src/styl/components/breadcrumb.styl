$breadcrumb-link-color = $body-color
$breadcrumb-active-color = alpha($breadcrumb-link-color, 50%)

.breadcrumbs // ol
	display: flex
	margin: 0 0 0.5rem
	padding: 0
	font-size 0.9rem
	line-height: 1.3
	list-style: none
	&__item // li
		white-space: nowrap
		&:not(:last-child):after
			content 'â†’'
			margin 0 0.4rem
	&__link
		display: inline-block
		color $breadcrumb-link-color !important
		border-color $breadcrumb-active-color !important
		border-width: 1px !important
		thin-underline--default()
		&.--current
			border: 0
			color: $breadcrumb-active-color !important
			background none !important
			cursor default
			+media-down(md)
				text-overflow: ellipsis
				width: 100px
				overflow: hidden
		