/* Кнопка Наверх*/

.scroll-to-top
	$bgc = #fff
	$color = #000
	cursor pointer
	display none
	position fixed
	z-index 500
	top: 50%
	transform: translateY(-50%)
	right 10px
	text-align center
	height 50px
	width 50px
	line-height 50px
	border 0
	border-radius 50%
	background alpha($bgc, 60%)
	color alpha($color, 80%)
	box-shadow 0 2px 2px 0 rgba(0,0,0,0.14), 0 1px 5px 0 rgba(0,0,0,0.12), 0 3px 1px -2px rgba(0,0,0,0.3)
	font-size 1.5rem
	transition background .2s ease, box-shadow .2s ease
	&:hover
		background $bgc
		color alpha($color, 100)
		box-shadow 0 2px 2px 0 rgba(0,0,0,0.09), 0 1px 5px 0 rgba(0,0,0,0.07), 0 3px 1px -2px rgba(0,0,0,0.1)
	&:focus
		outline 0 //todo Должен работать только с клавиатуры