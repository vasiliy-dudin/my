//.portfolio


.project-list
	display: grid;
	grid-gap: $grid-gutter-width-base
	+media(sm)
		grid-template-columns: 1fr 1fr;
	+media(md)
		&.--2
		&.--3
			grid-template-columns: 1fr 1fr 1fr;
	&.--1
		margin-bottom: 4rem
	&.--2
		margin-bottom: $grid-gutter-width-base
	// Серим ссылки
	&.--2
	&.--3
		.project-card__title
			filter: grayscale(1)

.project-card
	position: relative
	&__link
		position: relative
		display: block
		border: 0 !important
		text-decoration: none

	// Изображение
	&__thumbnail
		position: relative
		box-shadow: 0 5px 15px alpha(#000, 20%)
		&.--external:after
			content: ''
			width: 20px
			height: @width
			display: block
			position: absolute
			left: 8px
			bottom: 8px
			background-image: url("../imgs/external-link.svg")
			background-repeat: no-repeat
			background-size @width

	img
		display: block
		@extend .img-fluid


	// Caption

	&__caption
		line-height: 1.4
		margin-top 10px
	&__title
		display: inline
		font-size: 1.1rem
		line-height 1.5
		color: $link-color
		thin-underline--default()
	&__desc
		margin-top: 5px
		color: $body-color
	&__date
		color: $color_gray--5



	// Работа в процессе наполнения

	/.--not-filled-in-yet
		opacity: .35
		filter: saturate(0)
		.work__title
			border-color: transparent
	&__not-available-message
		display: inline-block
		position: absolute
		bottom: 8px
		left: 8px
		padding 2px 6px
		border: 1px solid
		font-size: .9rem
		line-height: 1
		color: $body-color
		background #fff
		border-radius: 3px




	// hover, active, focus
	$img-overlay = alpha(#fff, 10%)

	&__link
		&:hover
			background unset !important
		& ^[0]__thumbnail:before
			content: ''
			width: 100%
			height: 100%
			position: absolute
			display: block
			top: 0
			left: 0
			transition: all .1s ease

		&:hover
		&:focus
			& ^[0]__thumbnail:before
				background: $img-overlay
			& ^[0]__title
				color $link-color--hover

		&:active ^[0]__thumbnail:before
			background: alpha($img-overlay, 50%);