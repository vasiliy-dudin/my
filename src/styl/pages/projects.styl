		color: $body-color*/



	// hover, active, focus
	$img-overlay = alpha(#fff, 10%)

	&__link
		&:hover
			background unset !important
		& ^[0]__thumbnail:before
			content: ''
			width: 100%
			height: 100%
			position: absolute
			display: block
			top: 0
			left: 0
			transition: all .1s ease

		&:hover
		&:focus
			& ^[0]__thumbnail:before
				background: $img-overlay
			& ^[0]__title
				color $link-color--hover

		&:active ^[0]__thumbnail:before
			background: alpha($img-overlay, 50%);