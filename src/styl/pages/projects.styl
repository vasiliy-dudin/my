//.portfolio


.project-list
	display: grid;
	grid-gap: $grid-gutter-width-base
	+media(sm)
		grid-template-columns: 1fr 1fr;
	+media(md)
		&.--2
		&.--3
			grid-template-columns: 1fr 1fr 1fr;
	&.--1
		margin-bottom: 4rem
	&.--2
		margin-bottom: $grid-gutter-width-base
	// Серим ссылки
	&.--2
	&.--3
		.project-card__title
			filter: grayscale(1)

.project-card
	background: $color_white
	border-radius: $section__radius
	overflow: hidden
	box-shadow: 0 5px 15px alpha(#000, 20%)
	// Не опубликован
	&.--unpublished
		background: alpha($color_white, 40%)
		box-shadow: unset
		//filter: grayscale(0)

	&__link
		position: relative
		display: block
		border: 0 !important
		text-decoration: none

	// Изображение
	&__thumbnail
		position: relative

		&.--external:after
			content: ''
			width: 40px
			height: @width
			display: block
			position: absolute
			left: 16px
			bottom: -8px
			background-image: url("../imgs/external-link.svg")
			background-repeat: no-repeat
			background-size 20px
			background-color $link-color
			background-position: center center
			border-radius: 50%

	img
		display: block
		@extend .img-fluid


	// Caption

	&__caption
		display grid
		gap 4px
		line-height: 1.4
		padding 16px
	&__title
		font-size: $font-size-lg
		color: $link-color
		font-weight: 600
		// Не опубликован
		&.--unpublished
			display flex
			align-items center
			flex-wrap wrap
			gap 6px
		&-innr
			thin-underline--default()
			// Не опубликован
			&.--unpublished
				border: 0
				color $color_blue-gray--4

	&__desc
	&__date
		color: $body-color



	// hover, active, focus
	$img-overlay = alpha(#fff, 10%)

	&__link
		&:hover
			background unset !important
		& ^[0]__thumbnail:before
			content: ''
			width: 100%
			height: 100%
			position: absolute
			display: block
			top: 0
			left: 0
			transition: all .1s ease

		&:hover
		&:focus
			& ^[0]__thumbnail:before
				background: $img-overlay
			& ^[0]__title
				color $link-color--hover

		&:active ^[0]__thumbnail:before
			background: alpha($img-overlay, 50%);