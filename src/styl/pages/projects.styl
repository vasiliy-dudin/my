//.portfolio


.project-list
	display: grid;
	grid-gap: $grid-gutter-width-base
	+media(sm)
		grid-template-columns: 1fr 1fr;
	+media(md)
		&.--2
		&.--3
			grid-template-columns: 1fr 1fr 1fr;
	&.--1
		margin-bottom: 4rem
	&.--2
		margin-bottom: $grid-gutter-width-base
	// Серим ссылки
	&.--2
	&.--3
		.project-card__title
			filter: grayscale(1)

.project-card
	&__link
		position: relative
		display: block
		border: 0 !important
		text-decoration: none

	// Изображение
	&__thumbnail
		position: relative
		box-shadow: 0 5px 15px alpha(#000, 20%)
		border-radius: $section__radius
		overflow: hidden
		&.--external:after
			content: ''
			width: 20px
			height: @width
			display: block
			position: absolute
			left: 8px
			bottom: 8px
			background-image: url("../imgs/external-link.svg")
			background-repeat: no-repeat
			background-size @width

	img
		display: block
		@extend .img-fluid


	// Caption

	&__caption
		display grid
		gap 4px
		line-height: 1.4
		margin-top 10px
	&__title
		font-size: $font-size-lg
		color: $link-color
		font-weight: 600
		// Не опубликован
		&.--unpublished
			display flex
			align-items center
			flex-wrap wrap
			gap 6px
		&-innr
			thin-underline--default()
			// Не опубликован
			&.--unpublished
				border: 0
				color $body-color

	&__desc
	&__date
		color: $body-color

