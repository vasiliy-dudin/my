//.portfolio


.project-card
	position: relative
	margin-bottom: $grid-gutter-width-base
	&__link
		position: relative
		display: block
		border: 0 !important
		text-decoration: none
		box-shadow: 0 5px 15px alpha(#000, 20%)
		
		
	// Изображение
	img
		display: block
		@extend .img-fluid
		
		
	//caption
	$caption-bg = $brand-1
	&__caption
		&-wrapper // обёртка
			@extend .d-flex
			position: absolute
			bottom: 0
			flex-direction: column
			align-items: baseline
		display: inline-block
		line-height: 1.2
		padding: 6px 10px
		background-color: $caption-bg
		&.--external
			padding-left: 40px
			background-image: url("../imgs/external-link.svg")
			background-repeat: no-repeat
			background-position: 8px 8px
			background-size 16px
			filter saturate(0)
	&__title
		font-size: 1.2rem
		color: #fff
		display: inline
	&__desc
		font-size: 0.9rem
	&__desc
	&__date
		color: lighten(desaturate($caption-bg, 35%), 79%)
	&__date
		margin-top: 0.5rem
		font-size 0.8rem

		
	// todo ПЕРЕПИСАТЬ?
	+media-breakpoint-down(500px)
		width: 100%
	+media-down(md)
		font-size: 0.9rem





// thumbnail + caption states
.project-card
	&__link
		& ^[0]__thumbnail:before
			content: ''
			width: 100%
			height: 100%
			position: absolute
			display: block
			top: 0
			left: 0
			transition: all .1s ease
		
		
		$img-overlay = lighten(saturate($brand-2, 40%), 80%)
		// On link hover
		&:hover
			& ^[0]__thumbnail:before
				background: alpha($img-overlay, 24%);
				
		// On link active
		&:active
		&:focus
			& ^[0]__thumbnail:before
				background: alpha($img-overlay, 70%);
	
	/*
	Работа в процессе наполнения
	*/
	/.--not-filled-in-yet
		opacity: .35
		filter: saturate(0)
		.work__title
			border-color: transparent
	
	&__not-available-message
		line-height: 1
		font-size: .9rem
		color: #000000
	
	
	
	
	
