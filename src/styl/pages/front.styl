////// Первая секция обо мне
.hero-section
	@extend $g__section
	margin-bottom: 2rem
	display: grid;
	grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
	grid-gap: 1.5rem;
	+media(sm)
		grid-template-columns: minmax(50px, 2fr) 10fr;
	h2
		margin-top: 0
		margin-bottom: 1.5rem

.photo // 1 колонка
	max-width: 30%
	margin: 0 auto
	+media(sm)
		max-width: unset
	&__img
		border-radius: 50%
		+media(md)
			margin-bottom 0

.features // 2 колонка
	margin: auto 0
	display: grid;
	grid-gap: 1.5rem;
	+media(sm)
		grid-template-columns: repeat(auto-fit, minmax(285px, 1fr));
	&__item
		display: flex
		&:before
			content ''
			background url(/index/feature-icon.svg) no-repeat 0 50% // todo улучшить иконку?
			background-size contain
			flex: 0 0 auto
			height: 30px
			width: @height
			margin-right: 0.5rem



// Блоки с информацией обо мне
$about-me-section-gap = 10px;

.about-me-grid
	display: grid
	grid-gap: $about-me-section-gap
	+media(sm)
		grid-template-columns: repeat(auto-fit, minmax(410px, 1fr))

.about-me-section
	@extend $g__section
	&__name-aligner
		display: flex
		align-items center
		margin-bottom: 1.5rem
	&__img
		height 70px
		margin-right: 0.5rem
	&__name
		margin: 0
	&:not(:last-child)
		margin-bottom: $about-me-section-gap
