.section
	padding 2rem
	background #fff

	h2
		margin-top: 0
		margin-bottom: 1.5rem

//
.hero-section
	padding 1rem
	margin-bottom: 2rem
	&__photo
		margin-bottom 2rem
		+media(md)
			margin-bottom 0


.features
	margin: auto
	&__item
		display: flex
		&:nth-child(-n+3)
			margin-bottom: 1rem
		+media(sm)
			&:nth-child(-n+3)
				margin-bottom: 0
			&:nth-child(-n+2)
				margin-bottom: 1rem
		&:before
			content ''
			background url(/imgs/feature-icon.svg) no-repeat 0 50% // todo улучшить иконку?
			background-size contain
			flex: 0 0 auto
			height: 28px
			width: @height
			margin-right: 0.5rem


// Блоки с информацией обо мне
$about-me-section-gap = 10px;

.about-me-grid
	display: grid
	grid-template-columns: repeat(auto-fit, minmax(410px, 1fr))
	grid-gap: $about-me-section-gap

.about-me-section
	&__name
		display: flex
		&:before
			content: '';
			background: url(/imgs/feature-icon.svg) no-repeat 0 50% // TODO Заменить иконки
			background-size: contain;
			width: 23px;
			margin-right: 0.5rem;
	&:not(:last-child)
		margin-bottom: $about-me-section-gap