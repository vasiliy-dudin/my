// Шкала
.scales
	display: inline-flex
	flex-direction: column
	align-items flex-end

.scale
	display: flex
	align-items center
	&:not(:last-child)
		margin-bottom 8px
	&__name
		margin-right: 8px
		text-align right
		line-height 1.2
	&__segments
		display:flex
	&__segment
		width: 12px
		height: @width
		border: 1px solid #7ECB92 // TODO В переменную
		border-radius 50%
		+media(sm)
			width: 16px
			height: @width
		&:not(:last-child)
			margin-right 4px
		&.--painted
			background: #7ECB92 // TODO В переменную