// =====================
// Шапка проекта
// =====================

.project-header
	position relative
	padding: 1rem
	margin-bottom: 4rem
	body-bg(fixed)
	justify-content: space-between
	flex-wrap: wrap
	align-items: center
	box-shadow: 0 3px 10px rgba(0, 0, 0, 0.4)
	h1
		margin-bottom: 0
	+media(sm)
		position: sticky
		top 0


// Следующий/предыдущий проект
.neighbors // todo Мобильная версия
	@extend .d-flex
	position: absolute
	top: 1rem
	right: @top
	flex-wrap: wrap
	width 75px
	&__prev,
	&__next
		align-self: center
		width calc(50% - 2px)
		height: 32px
		padding: 0
		font-size: 20px
	&__next
		margin-left: auto;
	&__prev:before
	&__next:before
		content ''
		display: block
		width: 100%
		height: 100%
		margin auto
		background url('/imgs/neighbor-arrow.svg') 50% 50% no-repeat
		background-size: 18px
	&__prev:before
		transform scaleX(-1)




// =====================
// Контент
