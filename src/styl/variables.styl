// Z-index master list
//
// Warning: Avoid customizing these values. They're used for a bird's eye view
// of components dependent on the z-axis and are designed to all work together.
$zindex-dropdown-backdrop = 990
$zindex-navbar = 1000
$zindex-dropdown = 1000
$zindex-fixed = 1030
$zindex-sticky = 1030
$zindex-modal-backdrop = 1040
$zindex-modal = 1050
$zindex-popover = 1060
$zindex-tooltip = 1070





// Image thumbnails
$thumbnail-padding = 0.25rem
$thumbnail-bg = $body-bg
$thumbnail-border-width = 1px
$thumbnail-border-color = #ddd
$thumbnail-border-radius = 3px
$thumbnail-box-shadow = 0 1px 2px rgba($color_black, 0.075)
$thumbnail-transition = all 0.2s ease-in-out


// Figures
$figure-caption-font-size = 90%
$figure-caption-color = $color_gray-light







