// Reassign color vars to semantic color scheme
$brand-primary = $color_blue
$brand-success = $color_green
$brand-info = $color_teal
$brand-warning = $color_orange
$brand-danger = $color_red
$brand-inverse = $color_gray-dark




// Body
//
// Settings for the `<body>` element.

$body-color = $color_blue-gray--2
$inverse-bg = $color_gray-dark
$inverse-color = $color_gray-lighter


$selection = #E1BEE7;



// ====================
// Type
// ====================

// Font, line-height, and color for body text, headings, and more.
$font-family-sans-serif = 'Roboto',sans-serif
$font-family-serif = Georgia, "Times New Roman", Times, serif
$font-family-monospace = Consolas, "Liberation Mono", "Courier New", monospace
$font-family-base = $font-family-sans-serif
$font-size-root = 16px
$font-size-base = 1rem
$font-size-lg = 1.25rem
$font-size-sm = 0.875rem
$font-size-xs = 0.75rem
$font-weight-normal = normal
$font-weight-bold = bold
$font-weight-base = $font-weight-normal
$line-height-base = 1.7

// Headings
$font-size-h1 = 2.35rem // 2.5rem
$font-size-h2 = 1.35rem // 2rem
$font-size-h3 = 1.1rem // 1.75rem
$font-size-h4 = 1rem // 1.5rem
$font-size-h5 = 0.9rem // 1.25rem
$font-size-h6 = 0.8rem // 1rem



//Reboot
$dt-font-weight = $font-weight-bold


//no
$hr-border-color = rgba($color_black, 0.1)
$abbr-border-color = $color_gray-light







