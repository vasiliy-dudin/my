/* Кнопка Наверх*/

.scroll-to-top
	$bgc = #fff
	$color = #000
	cursor pointer
	display none
	position fixed
	z-index 500
	bottom 10px
	right 10px
	text-align center
	height 50px
	width 50px
	line-height 50px
	border 0
	border-radius 50%
	background url(/assets/arrow-scroll-up.svg) alpha($bgc, 60%) no-repeat 50% 50%
	color alpha($color, 80%)	
	font-size 1.5rem
	transition background .2s ease, box-shadow .2s ease
	@extend $link-block