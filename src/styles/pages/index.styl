@import "../variables/_index.styl"
@import "../variables/tokens"
@import "../variables/tokens-semantic.styl"


////// Первая секция обо мне
.hero-section
	display: flex
	justify-content: center
	flex-wrap: wrap
	margin-bottom: 48px
	gap: 1.5rem
	@extend $g__section $paddings
	@extend $g__section $radius
	background: $sd-color__palette-neutral-white
	box-shadow: 8px 12px 0 $border-color-1
	border: 2px solid $border-color-1
	position relative	

	&__art
		position: absolute
		width: 1120px
		top: -70px
		transform: rotate(185deg)
		z-index: -999
	&__art svg
		width: 100%
		height: 100%
		
	&__img-col
		margin: 0 auto
		flex-basis: 160px
		+media(sm)
			flex-basis: 240px
	&__img
		display: block
		width: 100%
		height: auto
		border-radius: $radius--L

	&__text
		flex: 1 1 @css{min(100%, 500px)}
		margin: auto
	h2
		margin-top: 0
		margin-bottom: 1.5rem


.front-section
	@extend $g__section $paddings
	@extend $g__section $radius
	@extend $g__section $secondary
	margin-bottom: 24px
	h2
		margin-top: 0



.skills-list
	display: flex
	flex-direction: column
	gap: 8px
	padding-top: 8px

.skill
	display: flex
	gap: 12px

	&:before
		content: ''
		display: block		
		width: 12px
		height: @width
		flex-shrink: 0
		margin-top: 16px
		border-radius: 50%
		background: linear-gradient(270deg, $sd-color__palette-yellow-300, $sd-color__palette-yellow-100)

	&__name
		margin: 12px 0 0



.experience
	display: flex
	flex-direction: column
	gap: 1rem
	padding-top: 8px

.experience-item
	display: flex
	gap: 12px

	&__img svg
		width: 24px
		height: @width
		border-radius: $radius--S
		overflow: hidden
		+media(sm)
			width: 48px
			height: @width



	&__role
		margin: 0 0 4px
		
	&__company
	&__years
		color: $color-text-desc