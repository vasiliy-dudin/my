@import "../variables/_index.styl"
@import "../variables/tokens"
@import "../variables/tokens-semantic.styl"


////// Первая секция обо мне
.hero-section
	display: flex
	position: relative
	flex-wrap: wrap
	margin-bottom: 48px
	overflow: hidden	
	@extend $box $paddings
	@extend $box $radius
	background: $sd-color__palette-neutral-white
	box-shadow: 8px 12px 0 $border-color-1
	border: 2px solid $border-color-1
	// responsive
	justify-content: center
	text-align: center
	@media (min-width: 680px)
		justify-content: flex-start
		text-align: left


	// Photo
	&__img
		display: block
		width: 200px
		height: auto
		margin-bottom: 16px
		border-radius: 50%		
		@media (min-width: 680px)
			position: absolute
			right: -70px
			top: -20px
			width: auto



	// Text block
	&__text-col
		@media (min-width: 680px)
			flex: 0 1 calc(100% - 240px)

	&__heading-row
		display: flex
		gap: 8px
		// responsive
		justify-content: center
		@media (min-width: 680px)
			justify-content: flex-start

	&__heading-img
		display: block
	
	&__heading
		margin: 0

	&__subtitle
		margin-bottom: 16px

	&__tags
		display: flex
		flex-wrap: wrap
		gap: 8px
		margin-top: 4px
		padding: 0
		// responsive
		justify-content: center
		@media (min-width: 680px)
			justify-content: flex-start
	
	&__tag
		display inline-flex
		flex: 0 1 auto
		list-style: none
		padding: 4px 8px
		font-size: $font-size-sm
		border-radius: 16px
		background: $sd-color__palette-yellow-100



.front-section
	@extend $box $paddings
	@extend $box $radius
	@extend $box $secondary
	margin-bottom: 24px
	h2
		margin-top: 0



.skills-list
	display: flex
	flex-direction: column
	gap: 8px
	padding-top: 8px

.skill
	display: flex
	gap: 12px

	&:before
		content: ''
		display: block		
		width: 12px
		height: @width
		flex-shrink: 0
		margin-top: 16px
		border-radius: 50%
		background: linear-gradient(270deg, $sd-color__palette-yellow-300, $sd-color__palette-yellow-100)

	&__name
		margin: 12px 0 0



.experience
	display: flex
	flex-direction: column
	gap: 1rem
	padding-top: 8px

.experience-item
	display: flex
	gap: 12px

	&__img svg
		width: 24px
		height: @width
		border-radius: $radius--S
		overflow: hidden
		+media(sm)
			width: 48px
			height: @width



	&__heading
		margin: 0 0 4px
		
	&__desc
		color: $color-text-desc