.project-card
	background: $sd-color__palette-neutral-white
	position: relative
	border-radius: $radius--L
	overflow: hidden
	@extend $link-block
	will-change: transform
	transform: translate3d(0, 0, 0)
	transition: transform .1s linear
		
	&:active
		transform: scale(0.995)

	&__tags
		margin-bottom: 12px

	&:focus-within:has(:focus-visible)
		outline: 2px solid
	&__link:focus
		outline: 0
	&__link:after
		content: ""
		position: absolute
		left: 0
		top: 0
		right: 0
		bottom: 0
	&__link:hover:after
		background: alpha($sd-color__palette-yellow-300, 20%)
		mix-blend-mode: screen

