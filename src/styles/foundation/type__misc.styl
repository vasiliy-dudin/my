//===========================
// Misc
//===========================
// Builds on `abbr`
.initialism
	font-size: 90%
	text-transform: uppercase

// Blockquotes
.blockquote
	padding: 0.9rem
	margin-bottom: 1rem
	font-size: $blockquote-font-size
	border-left: $blockquote-border-width solid $blockquote-border-color

.blockquote-footer
	display: block
	font-size: 80%
// back to default font-size
	color: $blockquote-small-color
	&::before
		content: "— "

// em dash, nbsp
// Opposite alignment of blockquote
.blockquote-reverse
	padding-right: 1rem
	padding-left: 0
	text-align: right
	border-right: $blockquote-border-width solid $blockquote-border-color
	border-left: 0

.blockquote-reverse .blockquote-footer
	&::before
		content: ""
	&::after
		content: " —" // nbsp, em dash


.text-hide
	text-hide()