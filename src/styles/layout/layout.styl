html
body
	overflow-x: clip

html
	box-sizing: border-box
	scroll-behavior: smooth

*
*::before
*::after
	box-sizing: inherit

body
	margin: 0
	background $sd-color__palette-neutral-white
	// Sticky Footer
	min-height: 100vh
	display: grid
	grid-template-rows: auto 1fr auto

.main
	margin-top 40px
	&.--no-gap
		margin-top 0


::selection
	background: $sd-color__palette-blue-100
	text-shadow: none


make-container()
	position relative
	margin-right auto
	margin-left auto
	padding-left ($grid-gutter-width-base / 2)
	padding-right ($grid-gutter-width-base / 2)
	
make-container-width()
	for $w1, $w2 in $breakpoints-and-widths
		@media (min-width: unquote($w1))
			width: $w2
			
			
