$header__bg = #fff
$header__color = #333

.header
	background $header__bg

// Строка с навигацией и названием сайта
.nav
	display: flex
	
	// Адаптивное
	flex-direction column
	align-items: center // выравнивает navbar-header по вертикали
	//padding 1rem
	+media(md)
		height 70px
		flex-direction: row
		justify-content: space-between
		//padding 0 ($grid-gutter-width-base / 2)
	

			

.logo
	display: flex
	align-items center
	gap 12px
	color $header__color
	margin-right: 0.5rem
.logo__name
	line-height 1
	font-size 1.2rem
	font-weight bold

	



$item__bg--active = #FEE076
$item__bg--hover = darken($header__bg, 5)
$link__color = $header__color !important

.menu // ul
	display: flex
	gap 12px
	margin 0
	padding 0
	list-style: none

	&__item
		flex-grow: 1
		+media(md)
			flex-grow: 0

	&__link
		display: flex
		height: 100%
		transition background 0.15s
		color $link__color
		line-height: 1.5
		border-radius 10px
		text-decoration underline
		text-decoration-thickness: 1px
		text-underline-offset 7px


		&:hover
			background-color $item__bg--hover
		&.--active
			background-color $item__bg--active !important

		// Адаптивное
		padding 8px 12px
		flex 1 0 100%
		text-align right
		+media(md)
			align-items center
			flex 0 0 auto
		+media(lg)
			&:before
				top 6px


	// Адаптивное
	flex-wrap wrap
	margin-top 1.5rem
	+media(md)
		flex-direction row
		flex-wrap nowrap
		margin-top: 0