$header__bg = #fff
$header__color = #333

.header
	background $header__bg

// Строка с навигацией и названием сайта
.nav
	display: flex
	
	// Адаптивное
	flex-direction column
	align-items: center // выравнивает navbar-header по вертикали
	//padding 1rem
	+media(md)
		height 70px
		flex-direction: row
		justify-content: space-between
		//padding 0 ($grid-gutter-width-base / 2)
	

			

.logo
	display: flex
	align-items center
	gap 12px
	color $header__color
	margin-right: 0.5rem
	text-decoration: none
.logo__name
	line-height 1
	font-size 1.2rem
	font-weight bold
	white-space nowrap

	



$item__bg--active = #FEE076
$item__bg--hover = darken($header__bg, 5)
$link__color = $header__color !important

.menu // ul	
	gap 12px
	margin 0
	padding 0
	list-style: none

	// Adaptive
	display: grid
	grid-template-columns: repeat(2, 1fr);
	margin-top 1.5rem
	+media(sm)
		display: flex
		width: 100%
	+media(md)
		margin-top: 0
	+media(lg)
		width: unset

	&__item
		flex-grow: 1
		justify-content: center
		+media(lg)
			flex-grow: 0

	&__link
		display: block
		height: 100%
		padding 8px 12px
		white-space: nowrap
		text-align: center
		transition background 0.15s
		color $link__color
		line-height: 1.5
		border-radius 10px
		text-decoration underline
		text-decoration-thickness: 1px
		text-underline-offset 7px

		&:hover
			background-color $item__bg--hover
		&.--active
			background-color $item__bg--active !important