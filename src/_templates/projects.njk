---
layout: _base.njk
---


<h1>{{ title }}</h1>

<div class="project-list">
	{{ content | safe }}
	{% if "work" in permalink %}
		{% set list = collections.workProjects %}
	{% endif %}	
	{% if "pet" in permalink %}
		{% set list = collections.petProjects %}
	{% endif %}
	{%- for project in list -%}
		<article class="project-card">
			<h3 class="project-card__title">
				<a class="project-card__link" href="{{ project.data.permalink }}">
					{{ project.data.title }}
				</a>
			</h3>			
			<div class="project-card__desc">{{ project.data.description }}</div>
			<div class="project-card__date">{{ project.data.years }}</div>
			<div class="tags">
				{%- for tag in project.data.category -%}
					<span class="tag">{{ tag }}</span>
				{%- endfor -%}
			</div>

		</article>
	{%- endfor -%}
</div>